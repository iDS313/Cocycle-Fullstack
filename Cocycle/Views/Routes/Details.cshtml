@using Microsoft.AspNet.Identity
@model Cocycle.Models.Routes

@{
    ViewBag.Title = "Routes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="event-tab" style="margin: 10px 0px 50px 0px;">
    <div class="container">
        <div class="row">
           
            <div class="col-lg-12">
                <div class="tab-content" style="margin-top: 50px;">
                    <div class="tab-All-content inactive active">
                        <div class="event-left-content" id="divlist">

                          
                                <div class="img-item row" style="margin-bottom: 30px;">
                                    <div class="col-lg-3">
                                        <div class="row h-100">
                                            <div class="img-left" style="display: block;">
                                                @if (Model.PosterImage != null)
                                                {
                                                    <img class="img-fluid pad" src="@Html.DisplayFor(modelItem => Model.PosterImage)" style="height: 100%; width:100%" alt="">
                                                }
                                                else
                                                {
                                                    <img class="img-fluid pad" src="~/Content/banner-img/Cocycle-bike-orange.png" style="height: 100%;width:100%" alt="">
                                                }
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-9  d-flex align-items-center">
                                        <div class="content">

                                            <h4 style="margin-top: 0px">
                                                <span class="labels">Location : </span> @Html.DisplayFor(modelItem => Model.State.StateName),
                                                @Html.DisplayFor(modelItem => Model.Area.AreaName)
                                                &emsp;<span class="labels">Route No :  </span> @Html.DisplayFor(modelItem => Model.Id)
                                                &emsp; <span class="labels">Created Date : </span> @Model.Created.ToString("dd-MMMM-yyyy")
                                            </h4>

                                            <h4 style="margin-top: 0px">
                                                <span class="labels">Departure :</span> @Model.StartTime.ToString(" hh:mm tt")
                                                &emsp; <span class="labels">Arrival :</span>  @Model.EndTime.ToString(" hh:mm tt")
                                            </h4>
                                            <h4 style="margin-top:0px">
                                                @foreach (var items in Model.RouteSchedule)
                                                {
                                                    <span class="days badge badge-primary my-1"> @items.DayId</span>
                                                }
                                            </h4>
                                            <h4 style="margin-top: 0px">
                                                <span class="labels">By :  </span> @Html.DisplayFor(modelItem => Model.applicationUserCreated.Name)
                                                &nbsp; <span class="labels">Phone No : </span>@Html.DisplayFor(modelItem => Model.applicationUserCreated.PhoneNumber)
                                                &nbsp; <span class="labels">Email-ID : </span>@Html.DisplayFor(modelItem => Model.applicationUserCreated.Email)
                                            </h4>

                                            <h4 style="margin-top: 0px">
                                                <span class="labels">Departure Point -</span> @Html.DisplayFor(modelItem => Model.StartingPoint)
                                            </h4>
                                            <h4 style="margin-top: 0px">
                                                <span class="labels">Arrival Point -</span> @Html.DisplayFor(modelItem => Model.EndPoint)
                                            </h4>

                                            @if (Model.Addreturn == true)
                                            {
                                                <h4 style="margin-top: 0px"> <span class="labels">Return Journey</span></h4>
                                            }

                                            @if (Model.Message != null)
                                            {
                                                <p><span class="labels">Message</span> : @Html.DisplayFor(modelItem => Model.Message)</p>
                                            }
                                            @if (Model.Description != null)
                                            {
                                                <p><span class="labels">Description</span> : @Html.DisplayFor(modelItem => Model.Description)</p>
                                            }

                                            @*<h4 style="margin-top: 0px">
            <span class="labels">Feedbacks-</span>
        </h4>
        @foreach (var itemss in Model.FeedBack)
        {
            <p> @itemss.user.Name - @itemss.description</p>
        }*@
                                            @if (Model.CreatedBy == User.Identity.GetUserId())
                                            {
                                                <span class="badge-info">Created By You</span>
                                            }
                                            else
                                            {

                                            }

                                        </div>

                                    </div>

                                </div>
                            
                        </div>
                    </div>
                
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <!-- With locals-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment-with-locales.min.js"></script>
    <!-- Without locals-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>

    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(document).ready(function () {
            var dayslist = Array.from(document.querySelectorAll(".days"));
            dayslist.forEach(function (item) {
                if (item.innerHTML == 1) { item.innerHTML = "Monday"; }
                if (item.innerHTML == 2) { item.innerHTML = "Tuesday"; }
                if (item.innerHTML == 3) { item.innerHTML = "Wednesday"; }
                if (item.innerHTML == 4) { item.innerHTML = "Thursday"; }
                if (item.innerHTML == 5) { item.innerHTML = "Friday"; }
                if (item.innerHTML == 6) { item.innerHTML = "Saturday"; }
                if (item.innerHTML == 7) { item.innerHTML = "Sunday"; }
            });
        });


   

    </script>
}





