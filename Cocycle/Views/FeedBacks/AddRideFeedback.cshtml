@model Cocycle.Models.FeedBack

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.RideId, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.RideId, "", new { @class = "text-danger" })

    <div class="form-area">
        <div class="container">
            <div class="row">
                <div class="col-8 offset-2">
                    <div class="card" style="box-shadow: #00000017 0px 3px 12px;">
                        <div class="card-header" style="background-color: #a5c7b6;font-family: 'Avenir-Bold'">
                            Feedback for Ride No. @Model.RideId
                        </div>
                        <div class="card-body">
                            <div class="row" style="color:black">
                                <form action="#" class="form">
                                    @*<div class="col-md-3">
                                <div class="form-group">
                                    <label class="label-default">Did the ride go ahead ?</label>
                                    @Html.EditorFor(model => model.RideHappened, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.RideHappened, "", new { @class = "text-danger" })
                                </div>
                        </div>*@
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="label-default">Enter Your Valuable Feedback Here</label>
                                            @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control", placeholder = "enter here" } })
                                            @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <div class="btn-wrapper">
                                                <button type="submit" class="btn btn-element btn-medium btn-red float-right">Submit</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
         

        </div>
    </div>
}

