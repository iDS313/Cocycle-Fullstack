                <div class="home-rolling-slider home2-rolling-slider" style="background:unset">
                    <div class="single-item">
                        <img src="~/Content/WebAssets/img/home1/tour1.png" style="border-radius:50%" alt="">
                        <img src="~/Content/WebAssets/img/home1/tour2.png" style="border-radius: 50%;max-width: 35%;position: absolute;right: 10%;bottom: 5%;" alt="">
                    </div>
                </div>
            </div>
