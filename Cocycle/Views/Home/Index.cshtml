                    </div>
                    <div>
                        <span style="color:#2c9297;font-size:0.8rem">Lend a hand to someone</span>
                        @if (Request.IsAuthenticated)
                        {
                            if (User.IsInRole("cyclist"))
                            {
                                <a href="@Url.Action("Index","Arrangeds")" class="btn btn-element btn-red float-right" style="position:relative;bottom:25px;margin:23px"> I already travel by bike</a>
                            }
                            else
                            {
                                <a href="#" onclick='showmessage(1)' ; class="btn btn-element btn-red float-right" style="position:relative;bottom:25px;margin:23px"> I already travel by bike</a>
                            }
                        }
                        else
                        {
                            <a href="@Url.Action("Register","Account")" class="btn btn-element btn-red float-right" style="position:relative;bottom:25px;margin:23px"> I already travel by bike</a>
                        }

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 ">
                <div class="w-100 pl-0  pt-2 pb-2 pt-md-5">
