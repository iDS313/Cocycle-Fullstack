    <div class="container " style="margin:80px 1px 50px 40px">
        <div class="row">
            <div class="col-md-8">
                
                <div class="col-md-12 d-flex align-items-start">
                    <img src="/Content/WebAssets/img/4788-ai.png" />
                </div>
                <h3 class="m-5" style="color:#2c9297">Cocycle helps you connect and Ride with people.</h3>

                @*<h3>Cocycle helps you connect and Ride with people.</h3>*@
            </div>
            <div class="col-md-4 p-1">

                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center" style="background: #e7e9d7;">
                            <h3 class="m-0">Login</h3>
                            <img src="~/Content/WebAssets/img/logo.png" />
                        </div>
                        <div class="card-body">


                            @Html.AntiForgeryToken()

                          
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Username/Email" })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-12">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "password" })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer" style="background: #e7e9d7;">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger " })
                            <div class="action">
                                <div class="col-12">

                                    <div class=" btn-wrapper desktop-right">
                                        <button type="submit" value="Log in" class="btn btn-element btn-red">Sign in</button>
                                        @Html.ActionLink("Forgot Password", "ForgotPassword", null, new { @class = "signup labels" })
                                    </div>
                                </div>

                            </div>

                        </div>

                    </div>
                }
                <a class="bottom"><h4 class="mt-3">Don't Have An Account @Html.ActionLink("Register Now", "Register", null, new { @class = "signup labels" })</h4>  </a>
                @*<p class="bottom">Already Have An Account Please <a class="signup">@Html.ActionLink(" Login Now", "Login", null, new { @class = "signup" }) </a> </p>*@
            </div>

            @*<a class="signup"> <h4>Already Have An Account Please @Html.ActionLink(" Login Now", "Login", null, new { @class = "signup labels" })</h4> </a>*@
        </div>

    </div>

