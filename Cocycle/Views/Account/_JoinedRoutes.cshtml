
@using Microsoft.AspNet.Identity
@model IEnumerable<Cocycle.Models.RouteGroup>

@{
    ViewBag.Title = "Index";
}
<div class="container pt-5 pb-5">

    @*<p style="color:black">
            @Html.ActionLink("Create New", "Create")
        </p>*@
    <div class="card">
        <div class="card-body">
            <table class="table" id="tablejoined" style="color:black">
                <thead>
                    <tr>
                        <th>
                            RouteNo
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ApproveBy)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RequestDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ApproveDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsApproved)
                        </th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.routes.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.applicationUserApproved.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RequestDate)
                            </td>
                            <td>
                                @if (item.IsApproved == true)
                                {@Html.DisplayFor(modelItem => item.ApproveDate)}
                            </td>
                            <td>
                                @if (item.IsApproved == false)
                                {
                                    <span class="badge badge-danger">Pending</span>
                                }
                                else
                                {
                                    <span class="badge badge-success">Approved</span>
                                }
                            </td>
                            @*<td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>*@
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>


</div>


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.21/js/jquery.dataTables.min.js"></script>
    <!-- With locals-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment-with-locales.min.js"></script>
    <!-- Without locals-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>



    @Scripts.Render("~/bundles/jqueryval")
    <script>
    $(document).ready(function () {
        $('#tablerequest').DataTable();
    });
    </script>

}

